#root
    width 100%
    height 100%

.bztb-tabs
    width 320px
    -webkit-box-shadow 0 0 2px 2px rgba(0,0,0,.2)
    box-shadow 0 0 2px 2px rgba(0,0,0,.2)
    margin auto
.bztb-tab
    -webkit-box-flex 1.0
    box-flex 1.0
    width 100px
    height 30px
    text-align center
    line-height 30px
    background #f2f2f2
    &.selected
        background #666
        color #fff
        -webkit-box-shadow 0 0 2px 2px rgba(0,0,0,.2) inset
        box-shadow 0 0 2px 2px rgba(0,0,0,.2) inset